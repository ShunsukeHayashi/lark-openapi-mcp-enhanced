# Email Configuration
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Tracking
TRACKING_DOMAIN=track.yourdomain.com
TRACKING_SECRET=your-secret-key-for-tracking

# Sender Information
SENDER_NAME=Your Company CRM
SENDER_EMAIL=noreply@yourdomain.com
COMPANY_NAME=Your Company
COMPANY_DOMAIN=yourdomain.com
COMPANY_WEBSITE=https://yourdomain.com

# Calendar Configuration
DEFAULT_TIMEZONE=Asia/Tokyo

# Google Calendar (Optional)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/auth/google/callback

# Outlook Calendar (Optional)
OUTLOOK_CALENDAR_ENABLED=false
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=https://api.yourdomain.com/auth/outlook/callback

# AI Configuration
OPENAI_API_KEY=your-openai-api-key

# Lark Configuration
LARK_APP_ID=your-lark-app-id
LARK_APP_SECRET=your-lark-app-secret
LARK_TENANT_KEY=your-tenant-key
LARK_API_URL=https://open.larksuite.com
LARK_BASE_TABLE_ID=BI4RbpcKxaR7C2sLq9GjXJUjp2b

# Lark Table IDs
LARK_CUSTOMERS_TABLE=tblCustomers
LARK_DEALS_TABLE=tblDeals
LARK_ACTIVITIES_TABLE=tblActivities
LARK_TASKS_TABLE=tblTasks
LARK_EMAILS_TABLE=tblEmails
LARK_ATTACHMENTS_TABLE=tblAttachments

# Database Configuration
DB_TYPE=sqlite
DB_FILE=./crm-email-calendar.db

# For PostgreSQL (alternative)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=crm_email_calendar
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password

# Webhook Configuration
WEBHOOK_BASE_URL=https://api.yourdomain.com
WEBHOOK_SECRET=your-webhook-secret

# Queue Configuration
QUEUE_TYPE=memory
# For Redis (alternative)
# QUEUE_TYPE=redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Logging
LOG_LEVEL=info