{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Priorities Configuration Schema",
  "type": "object",
  "required": ["version", "priorities"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Configuration description"
    },
    "priorities": {
      "type": "object",
      "description": "Tool priority groups",
      "additionalProperties": {
        "type": "object",
        "required": ["patterns"],
        "properties": {
          "description": {
            "type": "string"
          },
          "patterns": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["pattern", "priority"],
              "properties": {
                "pattern": {
                  "type": "string",
                  "description": "Tool name pattern to match"
                },
                "priority": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 10,
                  "description": "Priority level (1=highest, 10=lowest)"
                },
                "description": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "fallbacks": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["primary", "fallbacks"],
            "properties": {
              "primary": {
                "type": "string",
                "description": "Primary tool name"
              },
              "fallbacks": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of fallback tool names in order"
              },
              "description": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "retryPolicy": {
      "type": "object",
      "properties": {
        "maxAttempts": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of retry attempts"
        },
        "baseDelay": {
          "type": "integer",
          "minimum": 0,
          "description": "Base delay in milliseconds"
        },
        "maxDelay": {
          "type": "integer",
          "minimum": 0,
          "description": "Maximum delay in milliseconds"
        },
        "backoffMultiplier": {
          "type": "number",
          "minimum": 1,
          "description": "Exponential backoff multiplier"
        }
      }
    }
  }
}